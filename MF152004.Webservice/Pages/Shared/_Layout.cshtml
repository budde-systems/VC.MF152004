<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MF152004.Webservice</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MF152004.Webservice.styles.css" asp-append-version="true" />
    <link rel="icon" type="image/x-icon" href="~/images/bsLogo.ico" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">
                    <img width="30" height="30" src="~/images/bsLogo.ico"/>
                    Material Flow</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Main</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/configuration/index">Konfiguration</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/statistics/Index">Statistiken</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li><button type="submit" class="btn btn-secondary" data-toggle="tooltip" data-placement="bottom" title="Quittiert die Weiterfahrt bei Versatz von Etiketten" onclick="confirmMatchError2()">Störung Quittierung</button></li>
                    </ul>
                    <div id="ackSuccessToast" class="toast align-items-center border-success" role="alert" aria-live="assertive" aria-atomic="true" style="position: absolute; left: 0; right: 0; margin-left: auto; margin-right: auto; top: 5em;">
                        <div class="d-flex">
                            <div class="toast-body">
                                <strong>Fehler erfolgreich quittiert</strong>
                            </div>
                            <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                        </div>
                    </div>
                    <div id="ackFailureToast" class="toast align-items-center border-danger" role="alert" aria-live="assertive" aria-atomic="true" style="position: absolute; left: 0; right: 0; margin-left: auto; margin-right: auto; top: 5em;">
                        <div class="d-flex">
                            <div class="toast-body">
                                <strong>Ein Fehler ist aufgetreten. Die Bestätigung kann nicht abgeschickt werden. Ggf. muss die Seite erneut geladen werden</strong>
                            </div>
                            <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                        </div>
                    </div>
                    <div style="margin:0 0 0 20px">Status</div>
                    <div style="margin:0 0 0 10px">
                        <div id="statusOnline" hidden="true"><span class="rounded-pill badge bg-success">&nbsp;&nbsp;</span> Aktiv</div>
                        <div id="statusOffline" hidden="true"><span class="rounded-pill badge bg-danger">&nbsp;&nbsp;</span> Inaktiv</div>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Budde Systems Services - <a href="https://www.budde-systems.de">Budde Systems</a>
        </div>
    </footer>

    <script src="~/lib/microsoft/signalr/dist/browser/signalr.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>    
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>